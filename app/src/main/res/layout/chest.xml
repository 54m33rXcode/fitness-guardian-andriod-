<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#BC1D53"
    tools:context=".Chest">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="#BC1D53"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="#1C1C1B"
                    >


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="9dp"
                            android:text="Spiderman Push Up"
                            android:textColor="#ffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="9dp"
                            android:text="X 3sets"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_spider"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:paddingStart="12dp"
                            android:paddingEnd="5dp"
                            android:text="Steps"
                            android:textColor="#ffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/spidermanpushup" />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="#1C1C1B"
                    >


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="9dp"
                            android:text="Knee Push Up"
                            android:textColor="#ffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="9dp"
                            android:text="X 3sets"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_knee"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:paddingStart="12dp"
                            android:paddingEnd="5dp"
                            android:text="Steps"
                            android:textColor="#ffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/kneespushup" />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="#1C1C1B"
                    >


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="9dp"
                            android:text="Push Up"
                            android:textColor="#ffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="9dp"
                            android:text="X 3sets"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_push"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:paddingStart="12dp"
                            android:paddingEnd="5dp"
                            android:text="Steps"
                            android:textColor="#ffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/pushup" />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="#1C1C1B"
                    >


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="9dp"
                            android:text="Inclined Push Up"
                            android:textColor="#ffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="9dp"
                            android:text="X 3sets"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_incline"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:paddingStart="12dp"
                            android:paddingEnd="5dp"
                            android:text="Steps"
                            android:textColor="#ffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/inclinedpushup" />





                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="#1C1C1B"
                    >


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingStart="9dp"
                            android:text="Declined Push Up"
                            android:textColor="#ffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="9dp"
                            android:text="X 3sets"
                            android:textColor="#fff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_decline"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            android:paddingStart="12dp"
                            android:paddingEnd="5dp"
                            android:text="Steps"
                            android:textColor="#ffff"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/declinepushup" />





                </LinearLayout>

                <Button
                    android:id="@+id/btn_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#453A47"
                    android:drawableRight="@drawable/ic_exercise"
                    android:paddingStart="80dp"
                    android:paddingEnd="90dp"
                    android:text="Start Exercise"
                    android:textColor="#6FACA6"
                    android:textSize="18sp"
                    android:textStyle="bold" />




            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</LinearLayout>